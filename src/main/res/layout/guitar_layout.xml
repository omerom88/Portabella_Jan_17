<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/guitarscreenbase"
    android:id="@+id/guitarLayout"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom">

            <LinearLayout
                android:id="@+id/leftMargin"
                android:orientation="horizontal"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:background="#00ffffff"
                android:layout_weight="0.08">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/E_LOW"
                android:orientation="horizontal"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:background="#00ffffff"
                android:layout_weight="0.14">
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:background="#00ffffff"
                android:id="@+id/A"
                android:layout_weight="0.14">
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:background="#00ffffff"
                android:id="@+id/D"
                android:layout_weight="0.14">
            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:background="#00ffffff"
                android:id="@+id/G"
                android:layout_weight="0.14">
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:background="#00ffffff"
                android:id="@+id/B"
                android:layout_weight="0.14">
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:background="#00ffffff"
                android:id="@+id/E_HIGH"
                android:layout_weight="0.14">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rightMargin"
                android:orientation="horizontal"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:background="#00ffffff"
                android:layout_weight="0.08">
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/imageview_animated_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/animation_list_filling_rec"
            android:layout_gravity="right" />

        <ImageView
            android:id="@+id/imageview_animated_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/animation_list_filling_menu"
            android:layout_gravity="bottom|right" />

    </FrameLayout>


</LinearLayout>

